generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  APP_USER
}

type Session {
  token       String
  deviceModel String
  valid       Boolean  @default(true)
  started     DateTime @default(now())
  lastSeen    DateTime @default(now())
}

model User {
  id                 String               @id @default(auto()) @map("_id") @db.ObjectId
  userType           UserType             @default(APP_USER)
  userName           String
  email              String               @unique
  phone              String               @unique
  password           String  
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  sessions           Session[]
  phoneVerifications PhoneVerification[]
  @@map("users")
}

model PhoneVerification {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  userId            String?    @db.ObjectId
  phone             String    @unique
  verificationCode  String
  verificationExpiry DateTime
  verified          Boolean   @default(false)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  user              User?      @relation(fields: [userId], references: [id])
  
  @@map("phone_verifications")
}

model Crop {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  varieties Variety[] @relation("CropVarieties")

  @@map("crops")
}

model Variety {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  varietyId String
  crop      Crop   @relation(fields: [cropId], references: [id], name: "CropVarieties", onDelete: Cascade)
  cropId    String @db.ObjectId

  @@map("varieties")
}

model CropField {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  title       String
  cropId      String   @db.ObjectId
  varietyId   String   @db.ObjectId
  coordinates Coordinate[]
  @@map("crop_fields")
}

type Coordinate {
  latitude  Float
  longitude Float
}
